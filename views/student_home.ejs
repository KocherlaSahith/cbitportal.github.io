<% layout('layouts/lboilerplate')%>
<style>
#textbox{
    border-radius: 10px;
    padding-left: 200px;
}
body{
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 100%), url("https://images.unsplash.com/photo-1587620962725-abab7fe55159?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1031&q=80");
        font-family:'Times New Roman', Times, serif;
        height: 100%;

/* Center and scale the image nicely */
background-position: center;
background-repeat: no-repeat;
background-size: cover;
color: white;
    }
    .ls{
        font-size: 150%;
    }

</style>
<h2>Welcome back <%= lst1[0].name %></h2>
<br>
<br>
<form action="/Messages/<%= lst1[0].name %>">
    <button class="btn btn-info">Check Messages</button>
</form>
<form action="/my_issues/<%= lst1[0].name %>" method="get">
    <button class="btn btn-info">My issues</button>
</form>
<form action="/events">
    <button class="btn btn-info">Events</button>
</form>
<br>
<div class="row" >
    <div class="col-6 offset-3" id="box" style="backdrop-filter: blur(15px);">
        <form action="/stu_submit" method="post" novalidate class="validated-form" >
            <input type="text" name="s_name" value="<%= lst1[0].name %>" hidden>
            <label for="m_name" class="ls">Select your mentor </label>
            <select name="m_name">
                <% for (let campground of lst2){%>
                    <option><%= campground.name %></option>
                    <% }%>
            </select>
            <br>
            <h3 class="text-center">Describe your problem briefly</h3>
            <div class="mb-3">
                <textarea id="textbox" name="message" rows="4" cols="50">
                    </textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Submit</button>
            </div>
        </form>
    </div>
</div>